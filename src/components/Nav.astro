---
const pathname = Astro.url.pathname;
const isHome = pathname === '/';
---

<nav class="bg-white shadow-sm fixed w-full top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="size-8 text-blue-600" viewBox="0 0 32 32" fill="currentColor" aria-hidden="true">
            <rect x="6" y="6" width="20" height="20" rx="2" stroke="currentColor" stroke-width="2" fill="none" />
            <path d="M12 12h8v8h-8z" fill="currentColor" />
            <circle cx="16" cy="16" r="2" fill="white" />
          </svg>
        </div>
        <span class="ml-3 text-xl font-bold text-gray-900">Open WP Club</span>
      </a>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {isHome ? (
            <a href="#about" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">About</a>
            <a href="#mission" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mission</a>
            <a href="#why-us" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Why Us</a>
          ) : (
            <a href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Home</a>
          )}
          <a href="/plugins" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Plugins</a>
          <a href="/apps" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Apps</a>
          {isHome ? (
            <a href="#contact" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Contact</a>
          ) : null}
        </div>
      </div>
      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-colors duration-200"
        aria-label="Toggle menu"
      >
        <svg class="size-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {isHome ? (
        <a href="#about" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">About</a>
        <a href="#mission" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Mission</a>
        <a href="#why-us" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Why Us</a>
      ) : (
        <a href="/" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Home</a>
      )}
      <a href="/plugins" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Plugins</a>
      <a href="/apps" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Apps</a>
      {isHome ? (
        <a href="#contact" class="block text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-base font-medium">Contact</a>
      ) : null}
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
