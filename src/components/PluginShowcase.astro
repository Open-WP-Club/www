---
import PluginCard from './PluginCard.astro';
import { getCollection } from 'astro:content';

const allPlugins = await getCollection('plugins');
const featured = allPlugins
  .sort((a, b) => b.data.stars - a.data.stars)
  .slice(0, 6);
---

<section id="plugins" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 tracking-tight">Popular Plugins</h2>
      <p class="mt-3 text-lg text-gray-600 max-w-2xl mx-auto">
        Most-starred plugins from the Open WP Club GitHub org. All free, all open source.
      </p>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {featured.map((plugin) => (
        <PluginCard
          slug={plugin.id}
          name={plugin.data.name}
          description={plugin.data.description}
          version={plugin.data.version}
          stars={plugin.data.stars}
          forks={plugin.data.forks}
          lastPush={plugin.data.lastPush}
          language={plugin.data.language}
        />
      ))}
    </div>

    <div class="mt-10 text-center">
      <a
        href="/plugins"
        class="inline-flex items-center px-6 py-3 border border-blue-600 text-base font-medium rounded-lg text-blue-600 bg-white hover:bg-blue-50 shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200"
      >
        View All {allPlugins.length} Plugins
        <svg class="ml-2 size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
