---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import Contact from '../components/Contact.astro';
import { getCollection } from 'astro:content';
import { fetchOrgContributors } from '../lib/fetchGitHubData';

const allPlugins = await getCollection('plugins');
const repoNames = allPlugins.map((p) => p.id);
const contributors = await fetchOrgContributors(repoNames);
---

<BaseLayout
  title="Contributors - Open WP Club"
  description="Meet the people building free WordPress software. Every contributor — from code to bug reports — makes Open WP Club possible."
>
  <!-- Hero -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-blue-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 leading-tight tracking-tight">
          Built by
          <span class="text-blue-600"> {contributors.length} people</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
          Every plugin, every bug fix, every review — made possible by developers who contribute their time to free WordPress software.
        </p>
      </div>
    </div>
  </section>

  <!-- Two-column: Content + Sidebar -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-3 lg:gap-8">

        <!-- Main content -->
        <div class="lg:col-span-2">
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            {contributors.map((contributor) => (
              <a
                href={contributor.profileUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="group bg-white rounded-xl p-4 shadow-sm border border-gray-200 hover:shadow-lg hover:border-blue-200 transition-all duration-200 text-center"
              >
                <img
                  src={`https://github.com/${contributor.login}.png?size=80`}
                  alt={contributor.login}
                  width="64"
                  height="64"
                  loading="lazy"
                  class="mx-auto size-16 rounded-full ring-2 ring-gray-100 group-hover:ring-blue-200 transition-all"
                />
                <p class="mt-3 text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors truncate">
                  {contributor.login}
                </p>
                <p class="text-xs text-gray-500">
                  {contributor.contributions} {contributor.contributions === 1 ? 'contribution' : 'contributions'}
                </p>
              </a>
            ))}
          </div>

          <!-- Contribute CTA -->
          <div class="mt-12 bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 text-center">
            <h2 class="text-xl font-bold text-gray-900">Want to see your name here?</h2>
            <p class="mt-3 text-gray-600 leading-relaxed max-w-lg mx-auto">
              We welcome contributions of any kind — code, bug reports, documentation, translations, or ideas. Every PR counts.
            </p>
            <a
              href="https://github.com/Open-WP-Club"
              target="_blank"
              rel="noopener noreferrer"
              class="mt-6 inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 shadow-sm transition-all"
            >
              <svg class="size-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
              Start Contributing
            </a>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="mt-8 lg:mt-0">
          <div class="lg:sticky lg:top-24">
            <Sidebar />
          </div>
        </div>

      </div>
    </div>
  </section>

  <Contact />
</BaseLayout>
