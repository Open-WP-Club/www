---
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import Contact from '../components/Contact.astro';
import { GITHUB_ORG_URL } from '../lib/config';

const categories = [
  {
    emoji: 'üåê',
    title: 'Hosting & CDN',
    description: 'Zero-cost, carbon-aware infrastructure that scales without bills.',
    tools: [
      { name: 'Cloudflare Pages', note: 'Static hosting ‚Äî free tier, global edge network' },
      { name: 'Cloudflare DNS', note: 'DNS and DDoS protection ‚Äî free' },
      { name: 'GitHub Pages', note: 'Fallback / secondary hosting ‚Äî free' },
    ],
  },
  {
    emoji: 'üíª',
    title: 'Code & CI/CD',
    description: 'Everything lives in the open, built and tested automatically.',
    tools: [
      { name: 'GitHub', note: 'Source control, issues, project boards ‚Äî free for open source' },
      { name: 'GitHub Actions', note: 'CI/CD pipelines, automated builds and deploys ‚Äî free for public repos' },
      { name: 'Git', note: 'Version control ‚Äî open source' },
    ],
  },
  {
    emoji: 'üé®',
    title: 'Frontend',
    description: 'Fast, modern tooling that outputs zero JavaScript where possible.',
    tools: [
      { name: 'Astro', note: 'Static site generator ‚Äî open source, ships zero JS by default' },
      { name: 'Tailwind CSS', note: 'Utility-first CSS framework ‚Äî open source' },
      { name: 'TypeScript', note: 'Type safety for content collections and config' },
    ],
  },
  {
    emoji: 'üîå',
    title: 'WordPress',
    description: 'The ecosystem we build for. Everything GPL, everything free.',
    tools: [
      { name: 'WordPress', note: 'CMS ‚Äî GPL, powers 40%+ of the web' },
      { name: 'WooCommerce', note: 'E-commerce ‚Äî GPL, the base for many of our plugins' },
      { name: 'WP-CLI', note: 'Command-line management ‚Äî open source' },
      { name: 'PHPStan', note: 'Static analysis for plugin code quality' },
    ],
  },
  {
    emoji: 'üí¨',
    title: 'Community',
    description: 'Where we coordinate, discuss, and help each other.',
    tools: [
      { name: 'Discord', note: 'Real-time chat, support, and contributor coordination ‚Äî free' },
      { name: 'GitHub Discussions', note: 'Long-form conversations and RFCs ‚Äî free' },
      { name: 'GitHub Issues', note: 'Bug reports and feature requests ‚Äî free' },
    ],
  },
  {
    emoji: 'üõ†Ô∏è',
    title: 'Dev Tools',
    description: 'The tools we actually use, every day.',
    tools: [
      { name: 'VS Code', note: 'Primary editor ‚Äî open source' },
      { name: 'npm', note: 'Package management ‚Äî free' },
      { name: 'Docker', note: 'Local WordPress development environments ‚Äî open source' },
      { name: 'Playwright', note: 'End-to-end testing ‚Äî open source' },
    ],
  },
];

const stats = [
  { value: '$0', label: 'Monthly infrastructure cost' },
  { value: '100%', label: 'Open-source stack' },
  { value: 'GPL + MIT', label: 'Licensing' },
];
---

<BaseLayout
  title="Tech Stack - Open WP Club"
  description="The tools and services we use to build, deploy, and maintain free WordPress software. Everything open source, everything free."
>
  <!-- Hero -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-blue-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 leading-tight tracking-tight">
          Our <span class="text-blue-600">tech stack</span>
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-600 leading-relaxed max-w-3xl mx-auto">
          Every tool we use is either free or open source. We run the entire organization ‚Äî 30+ plugins, this website, CI/CD, community ‚Äî at <strong class="text-gray-900">$0 per month</strong>.
        </p>
      </div>
    </div>
  </section>

  <!-- Two-column: Content + Sidebar -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-3 lg:gap-8">

        <!-- Main content -->
        <div class="lg:col-span-2 space-y-8">

          <!-- Category cards -->
          {categories.map((cat) => (
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <div class="flex items-center gap-3 mb-4">
                <span class="text-2xl" aria-hidden="true">{cat.emoji}</span>
                <div>
                  <h2 class="text-xl font-bold text-gray-900">{cat.title}</h2>
                  <p class="text-sm text-gray-500">{cat.description}</p>
                </div>
              </div>
              <ul class="space-y-3">
                {cat.tools.map((tool) => (
                  <li class="flex items-start gap-3 text-sm">
                    <svg class="size-5 shrink-0 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75" />
                    </svg>
                    <span>
                      <strong class="text-gray-900">{tool.name}</strong>
                      <span class="text-gray-500"> ‚Äî {tool.note}</span>
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          ))}

          <!-- Philosophy -->
          <div class="bg-gradient-to-br from-green-50 via-white to-green-50 rounded-xl shadow-sm border border-green-200 p-6 sm:p-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Why this matters</h2>
            <div class="space-y-4 text-sm text-gray-600 leading-relaxed">
              <p>
                If we can run an entire open-source organization for free, so can you. We deliberately choose tools that don't lock us (or our contributors) into paid plans, vendor lock-in, or proprietary ecosystems.
              </p>
              <p>
                This isn't about being cheap ‚Äî it's about proving that good software doesn't require a budget. Every dollar we don't spend on infrastructure is a dollar we never need to extract from our users.
              </p>
            </div>
          </div>

          <!-- Stats bar -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            {stats.map((stat) => (
              <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center">
                <p class="text-3xl font-bold text-blue-600">{stat.value}</p>
                <p class="mt-1 text-sm text-gray-500">{stat.label}</p>
              </div>
            ))}
          </div>

          <!-- CTA -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 text-center">
            <p class="text-gray-600 mb-4">Want to see how it all fits together?</p>
            <a
              href={`${GITHUB_ORG_URL}/www`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 shadow-sm transition-all duration-200"
            >
              <svg class="size-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
              View this site's source code
            </a>
          </div>

        </div>

        <!-- Sidebar -->
        <div class="mt-8 lg:mt-0">
          <div class="lg:sticky lg:top-24">
            <Sidebar />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA -->
  <Contact />
</BaseLayout>
