---
import BaseLayout from '../../layouts/BaseLayout.astro';

const apps = [
  {
    name: 'Desktop for WooCommerce',
    description: 'Manage orders, inventory, and customers from a native desktop app — no browser tabs required. Still in development.',
    platform: 'Desktop',
    platformIcon: 'desktop',
    status: 'Coming Soon',
    tags: ['WooCommerce', 'Desktop', 'Orders', 'Inventory'],
  },
  {
    name: 'Android app for WooCommerce',
    description: 'Check orders and update stock from your phone. Push notifications for new orders and low-stock alerts. Early stage — not yet available.',
    platform: 'Android',
    platformIcon: 'mobile',
    status: 'Coming Soon',
    tags: ['WooCommerce', 'Android', 'Mobile', 'Orders'],
  },
];
---

<BaseLayout title="Apps - Open WP Club" description="Desktop and mobile apps for WooCommerce store management. Currently in development by Open WP Club.">
  <section class="pt-24 pb-16 bg-gradient-to-br from-blue-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">
          Apps
        </h1>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          Native apps for WooCommerce store management. These are in active development — none are publicly available yet.
        </p>
      </div>
    </div>
  </section>

  <section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8">
        {apps.map((app) => (
          <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 size-14 flex items-center justify-center rounded-xl bg-blue-100">
                  {app.platformIcon === 'desktop' ? (
                    <svg class="size-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25z" />
                    </svg>
                  ) : (
                    <svg class="size-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                    </svg>
                  )}
                </div>
                <div>
                  <h2 class="text-xl font-semibold text-gray-900">{app.name}</h2>
                  <span class="inline-flex items-center mt-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                    {app.platform}
                  </span>
                </div>
              </div>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-50 text-amber-700 border border-amber-200 shrink-0">
                {app.status}
              </span>
            </div>

            <p class="mt-4 text-gray-600 leading-relaxed">{app.description}</p>

            <div class="mt-5 flex flex-wrap gap-2">
              {app.tags.map((tag) => (
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
