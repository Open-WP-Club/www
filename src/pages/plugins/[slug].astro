---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PluginStats from '../../components/PluginStats.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const plugins = await getCollection('plugins');
  return plugins.map((plugin) => ({
    params: { slug: plugin.id },
    props: { plugin },
  }));
}

const { plugin } = Astro.props;
const { name, description, version, githubUrl, wordpressUrl, stars, forks, openIssues, lastPush, createdAt, topics, license, language, readmeHtml } = plugin.data;

function formatDate(dateStr: string): string {
  if (!dateStr) return 'N/A';
  return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}
---

<BaseLayout title={`${name} - Open WP Club`} description={description} ogType="article">
  <!-- Breadcrumb -->
  <div class="pt-20 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex text-sm text-gray-500">
        <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/plugins" class="hover:text-blue-600 transition-colors">Plugins</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{name}</span>
      </nav>
    </div>
  </div>

  <!-- Header -->
  <section class="bg-white pb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <div class="flex-1">
          <div class="flex items-center gap-3 flex-wrap">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">{name}</h1>
            {version && version !== 'N/A' && (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                v{version}
              </span>
            )}
          </div>
          <p class="mt-3 text-lg text-gray-600 leading-relaxed max-w-3xl">{description}</p>
        </div>
        <div class="flex flex-wrap gap-3 shrink-0">
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-5 py-2.5 border border-gray-900 text-sm font-medium rounded-lg text-white bg-gray-900 hover:bg-gray-800 transition-colors duration-200"
          >
            <svg class="size-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
            </svg>
            View on GitHub
          </a>
          {wordpressUrl && (
            <a
              href={wordpressUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-5 py-2.5 border border-blue-600 text-sm font-medium rounded-lg text-blue-600 bg-white hover:bg-blue-50 transition-colors duration-200"
            >
              WordPress.org
            </a>
          )}
        </div>
      </div>

      <!-- Stats bar -->
      <div class="mt-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <PluginStats stars={stars} forks={forks} lastPush={lastPush} language={language} license={license} />
      </div>

      <!-- Topics -->
      {topics.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-2">
          {topics.map((topic) => (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-200">
              {topic}
            </span>
          ))}
        </div>
      )}

      <!-- Extra info -->
      <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-500">
        {createdAt && (
          <span>Created: {formatDate(createdAt)}</span>
        )}
        {openIssues > 0 && (
          <span>{openIssues} open issue{openIssues !== 1 ? 's' : ''}</span>
        )}
      </div>
    </div>
  </section>

  <!-- README content -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 lg:p-10">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-4 border-b border-gray-200">README</h2>
        <div class="prose" set:html={readmeHtml} />
      </div>
    </div>
  </section>
</BaseLayout>
