---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import { getCollection } from 'astro:content';
import { GITHUB_ORG_URL, DISCORD_URL } from '../../lib/config';

export async function getStaticPaths() {
  const plugins = await getCollection('plugins');
  return plugins.map((plugin) => ({
    params: { slug: plugin.id },
    props: { plugin },
  }));
}

const { plugin } = Astro.props;
const { name, description, version, githubUrl, wordpressUrl, stars, forks, openIssues, lastPush, license, language, defaultBranch, readmeHtml } = plugin.data;
const downloadUrl = `${githubUrl}/archive/refs/heads/${defaultBranch}.zip`;

function formatDate(dateStr: string): string {
  if (!dateStr) return 'N/A';
  return new Date(dateStr).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}

const softwareSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name,
  description,
  applicationCategory: 'WordPress Plugin',
  operatingSystem: 'Any',
  ...(version && version !== 'N/A' && { softwareVersion: version }),
  ...(license && { license: `https://spdx.org/licenses/${license}` }),
  offers: { '@type': 'Offer', price: '0', priceCurrency: 'USD' },
  codeRepository: githubUrl,
};
---

<BaseLayout title={`${name} - Open WP Club`} description={description} ogType="article" jsonLd={softwareSchema}>
  <!-- Breadcrumb -->
  <div class="pt-20 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex text-sm text-gray-500">
        <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/plugins" class="hover:text-blue-600 transition-colors">Plugins</a>
        <span class="mx-2">/</span>
        <span class="text-gray-900 font-medium">{name}</span>
      </nav>
    </div>
  </div>

  <!-- Header -->
  <section class="bg-white pb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <div class="flex-1">
          <div class="flex items-center gap-3 flex-wrap">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">{name}</h1>
            {version && version !== 'N/A' && (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                v{version}
              </span>
            )}
          </div>
          <p class="mt-3 text-lg text-gray-600 leading-relaxed max-w-3xl">{description}</p>
        </div>
        <div class="flex flex-wrap gap-3 shrink-0">
          <a
            href={downloadUrl}
            class="inline-flex items-center px-5 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200"
          >
            <svg class="size-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
            Download ZIP
          </a>
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-5 py-2.5 border border-gray-900 text-sm font-medium rounded-lg text-white bg-gray-900 hover:bg-gray-800 transition-colors duration-200"
          >
            <svg class="size-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
            </svg>
            GitHub
          </a>
          {wordpressUrl && (
            <a
              href={wordpressUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-5 py-2.5 border border-blue-600 text-sm font-medium rounded-lg text-blue-600 bg-white hover:bg-blue-50 transition-colors duration-200"
            >
              WordPress.org
            </a>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Two-column: README + Sidebar -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-3 lg:gap-8">

        <!-- README -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 lg:p-10">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 pb-4 border-b border-gray-200">README</h2>
            <div class="prose max-w-none" set:html={readmeHtml} />
          </div>
        </div>

        <!-- Sidebar -->
        <div class="mt-8 lg:mt-0 space-y-6">

          <!-- Plugin Details -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Details</h3>
            <dl class="space-y-3 text-sm">
              {version && version !== 'N/A' && (
                <div class="flex justify-between">
                  <dt class="text-gray-500">Version</dt>
                  <dd class="text-gray-900 font-medium">{version}</dd>
                </div>
              )}
              {lastPush && (
                <div class="flex justify-between">
                  <dt class="text-gray-500">Last updated</dt>
                  <dd class="text-gray-900 font-medium">{formatDate(lastPush)}</dd>
                </div>
              )}
              {license && (
                <div class="flex justify-between">
                  <dt class="text-gray-500">License</dt>
                  <dd class="text-gray-900 font-medium">{license}</dd>
                </div>
              )}
              {language && (
                <div class="flex justify-between">
                  <dt class="text-gray-500">Language</dt>
                  <dd class="inline-flex items-center gap-1.5 text-gray-900 font-medium">
                    <span class="size-2.5 rounded-full bg-blue-500"></span>
                    {language}
                  </dd>
                </div>
              )}
              <div class="flex justify-between">
                <dt class="text-gray-500">Stars</dt>
                <dd class="text-gray-900 font-medium">{stars}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Forks</dt>
                <dd class="text-gray-900 font-medium">{forks}</dd>
              </div>
              {openIssues > 0 && (
                <div class="flex justify-between">
                  <dt class="text-gray-500">Open issues</dt>
                  <dd class="text-gray-900 font-medium">{openIssues}</dd>
                </div>
              )}
            </dl>
          </div>

          <!-- Download card -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-3">Download</h3>
            <a
              href={downloadUrl}
              class="flex items-center justify-center gap-2 w-full px-4 py-3 text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200"
            >
              <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
              </svg>
              Download ZIP
            </a>
            {wordpressUrl && (
              <a
                href={wordpressUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 w-full mt-3 px-4 py-3 text-sm font-medium rounded-lg text-blue-600 bg-white border border-blue-200 hover:bg-blue-50 transition-colors duration-200"
              >
                Get from WordPress.org
              </a>
            )}
          </div>

          <!-- Shared sidebar -->
          <Sidebar />

        </div>
      </div>
    </div>
  </section>
</BaseLayout>
