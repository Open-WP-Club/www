---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - Open WP Club" description="The page you're looking for doesn't exist.">
  <section class="pt-32 pb-20 bg-gradient-to-br from-blue-50 to-white min-h-[70vh] flex items-center">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-7xl font-bold text-blue-600">404</p>
      <h1 class="mt-4 text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">Page not found</h1>
      <p class="mt-4 text-lg text-gray-600">The page you're looking for doesn't exist or has been moved.</p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 shadow-sm transition-all duration-200"
        >
          Go home
        </a>
        <a
          href="/plugins/"
          class="inline-flex items-center px-6 py-3 text-base font-medium rounded-lg text-blue-600 bg-white border border-blue-600 hover:bg-blue-50 shadow-sm transition-all duration-200"
        >
          Browse plugins
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
