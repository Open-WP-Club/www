---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={`${post.data.title} - Open WP Club`}
  description={post.data.description}
>
  <!-- Hero -->
  <section class="pt-32 pb-12 bg-gradient-to-br from-blue-50 to-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <a href="/blog" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-700 mb-8 transition-colors">
        <svg class="size-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to blog
      </a>
      <time class="text-sm font-medium text-blue-600 uppercase tracking-wider">
        {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      <h1 class="mt-2 text-3xl sm:text-4xl font-bold text-gray-900 leading-tight tracking-tight">
        {post.data.title}
      </h1>
      <p class="mt-4 text-gray-500">By {post.data.author}</p>
    </div>
  </section>

  <!-- Two-column: Content + Sidebar -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-3 lg:gap-8">

        <!-- Main content -->
        <div class="lg:col-span-2">
          <article class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 lg:p-10 prose prose-gray max-w-none">
            <Content />
          </article>
        </div>

        <!-- Sidebar -->
        <div class="mt-8 lg:mt-0">
          <div class="lg:sticky lg:top-24">
            <Sidebar />
          </div>
        </div>

      </div>
    </div>
  </section>
</BaseLayout>
